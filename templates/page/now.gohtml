{{define "body"}}
    <main style="{{ .GetBackground }}">
        <div class="header">
            <h1 class="header__title">Now</h1>
            <nav>
                <a href="/">Home</a>
            </nav>
        </div>
        <div class="tags" style="{{ .Color.GetTagColor }}">
            {{ range $tag := .Person.Tags }}
                <div class="tag" data-href="{{ .Link }}" title="{{ .Link }}">
                    <h4>{{ .Name }}</h4>
                    <p>{{ .Description }}</p>
                    <p><a href="">Hello</a></p>
                </div>
            {{ end }}
        </div>
    </main>
{{end}}